# Proactor-based async I/O system.

load("//build_tools/bazel:build_defs.oss.bzl", "iree_cmake_extra_content", "iree_runtime_cc_fuzz", "iree_runtime_cc_library", "iree_runtime_cc_test")
load("//build_tools/bazel:cc_binary_benchmark.bzl", "cc_binary_benchmark")

package(
    default_visibility = ["//visibility:public"],
    features = ["layering_check"],
    licenses = ["notice"],  # Apache 2.0
)

#===------------------------------------------------------------------------===#
# Header-only types (for embedding in HAL buffers without link dependency)
#===------------------------------------------------------------------------===#

iree_runtime_cc_library(
    name = "types",
    hdrs = ["types.h"],
    deps = ["//runtime/src/iree/base"],
)

#===------------------------------------------------------------------------===#
# Core async library
#===------------------------------------------------------------------------===#

iree_runtime_cc_library(
    name = "async",
    srcs = [
        "address.c",
        "address_generic.c",
        "address_impl.h",
        "address_posix.c",
        "address_win32.c",
        "buffer_pool.c",
        "event.c",
        "file.c",
        "frontier.c",
        "frontier_tracker.c",
        "notification.c",
        "operation.c",
        "proactor.c",
        "region.c",
        "semaphore.c",
        "slab.c",
        "socket.c",
    ],
    hdrs = [
        "address.h",
        "affinity.h",
        "api.h",
        "buffer_pool.h",
        "event.h",
        "file.h",
        "frontier.h",
        "frontier_tracker.h",
        "notification.h",
        "operation.h",
        "operations/file.h",
        "operations/futex.h",
        "operations/message.h",
        "operations/net.h",
        "operations/scheduling.h",
        "operations/semaphore.h",
        "primitive.h",
        "proactor.h",
        "region.h",
        "relay.h",
        "semaphore.h",
        "slab.h",
        "socket.h",
        "span.h",
    ],
    deps = [
        ":types",
        "//runtime/src/iree/base",
        "//runtime/src/iree/base/internal",
        "//runtime/src/iree/base/internal:atomic_freelist",
        "//runtime/src/iree/base/internal:memory",
        "//runtime/src/iree/base/threading",
        "//runtime/src/iree/base/threading:thread",
    ],
)

#===------------------------------------------------------------------------===#
# Event pool (high-performance pooling for async events)
#===------------------------------------------------------------------------===#

iree_runtime_cc_library(
    name = "event_pool",
    srcs = ["event_pool.c"],
    hdrs = ["event_pool.h"],
    deps = [
        ":async",
        "//runtime/src/iree/base",
        "//runtime/src/iree/base/internal",
        "//runtime/src/iree/base/threading",
    ],
)

#===------------------------------------------------------------------------===#
# Platform-optimal backend
#===------------------------------------------------------------------------===#

iree_runtime_cc_library(
    name = "platform",
    srcs = ["proactor_platform.c"],
    hdrs = ["proactor_platform.h"],
    deps = [
        ":async",
    ] + select({
        "//build_tools/bazel:iree_is_linux": [
            "//runtime/src/iree/async/platform/io_uring",
            "//runtime/src/iree/async/platform/posix",
        ],
        "//build_tools/bazel:iree_is_windows": [
            "//runtime/src/iree/async/platform/iocp",
        ],
        "//conditions:default": [
            "//runtime/src/iree/async/platform/posix",
        ],
    }),
)

