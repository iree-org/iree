#===------------------------------------------------------------------------===#
# Convenience targets
#===------------------------------------------------------------------------===#

# All socket tests (link with backend library and main.cc for test binary).
iree_runtime_cc_library(
    name = "all_tests",
    testonly = True,
    deps = [
        ":lifecycle_test",
        ":message_test",
        ":multishot_test",
        ":send_flags_test",
        ":tcp_control_test",
        ":tcp_transfer_test",
        ":udp_test",
        ":zerocopy_test",
    ] + select({
        "@platforms//os:windows": [":win32_test"],
        "@platforms//os:linux": [":posix_test"],
        "@platforms//os:macos": [":posix_test"],
        "//conditions:default": [],
    }),
)

