# Tests for socket operations.

load("//build_tools/bazel:build_defs.oss.bzl", "iree_runtime_cc_library")

package(
    default_visibility = ["//visibility:public"],
    features = ["layering_check"],
    licenses = ["notice"],
)

#===------------------------------------------------------------------------===#
# Individual test libraries (alwayslink for static init registration)
#===------------------------------------------------------------------------===#

# Socket lifecycle tests: create, bind, listen, connect, accept, send/recv, IPv6.
iree_runtime_cc_library(
    name = "lifecycle_test",
    testonly = True,
    srcs = ["lifecycle_test.cc"],
    deps = [
        "//runtime/src/iree/async",
        "//runtime/src/iree/async/cts/util:registry",
        "//runtime/src/iree/async/cts/util:socket_test_base",
    ],
    alwayslink = True,
)

# Large transfer, concurrent connections, scatter-gather tests.
iree_runtime_cc_library(
    name = "tcp_transfer_test",
    testonly = True,
    srcs = ["tcp_transfer_test.cc"],
    deps = [
        "//runtime/src/iree/async",
        "//runtime/src/iree/async/cts/util:registry",
        "//runtime/src/iree/async/cts/util:socket_test_base",
    ],
    alwayslink = True,
)

# Shutdown, reset, bind/listen error tests.
iree_runtime_cc_library(
    name = "tcp_control_test",
    testonly = True,
    srcs = ["tcp_control_test.cc"],
    deps = [
        "//runtime/src/iree/async",
        "//runtime/src/iree/async/cts/util:registry",
        "//runtime/src/iree/async/cts/util:socket_test_base",
    ],
    alwayslink = True,
)

# Connected and unconnected UDP tests.
iree_runtime_cc_library(
    name = "udp_test",
    testonly = True,
    srcs = ["udp_test.cc"],
    deps = [
        "//runtime/src/iree/async",
        "//runtime/src/iree/async/cts/util:registry",
        "//runtime/src/iree/async/cts/util:socket_test_base",
    ],
    alwayslink = True,
)

# Zero-copy send/recv tests (requires zerocopy tag).
iree_runtime_cc_library(
    name = "zerocopy_test",
    testonly = True,
    srcs = ["zerocopy_test.cc"],
    deps = [
        "//runtime/src/iree/async",
        "//runtime/src/iree/async/cts/util:registry",
