# Multishot accept/recv tests (requires multishot tag).
iree_runtime_cc_library(
    name = "multishot_test",
    testonly = True,
    srcs = ["multishot_test.cc"],
    deps = [
        "//runtime/src/iree/async",
        "//runtime/src/iree/async/cts/util:registry",
        "//runtime/src/iree/async/cts/util:socket_test_base",
    ],
    alwayslink = True,
)

# POSIX-specific tests (SCM_RIGHTS, etc).
iree_runtime_cc_library(
    name = "posix_test",
    testonly = True,
    srcs = ["posix_test.cc"],
    target_compatible_with = select({
        "@platforms//os:linux": [],
        "@platforms//os:macos": [],
        "//conditions:default": ["@platforms//:incompatible"],
    }),
    deps = [
        "//runtime/src/iree/async",
        "//runtime/src/iree/async/cts/util:registry",
        "//runtime/src/iree/async/cts/util:socket_test_base",
        "//runtime/src/iree/base",
    ],
    alwayslink = True,
)

# Send flags tests: zero-copy send (SEND_ZC), MSG_MORE flag behavior.
iree_runtime_cc_library(
