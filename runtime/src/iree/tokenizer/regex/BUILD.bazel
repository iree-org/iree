iree_runtime_cc_library(
    name = "internal_dfa",
    srcs = ["internal/dfa.c"],
    hdrs = ["internal/dfa.h"],
    visibility = ["//visibility:private"],
    deps = [
        ":exec",
        ":internal_nfa",
        "//runtime/src/iree/base",
