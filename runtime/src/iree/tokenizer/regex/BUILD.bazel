#===------------------------------------------------------------------------===#
# Regex Compiler (Public API)
#===------------------------------------------------------------------------===#

# Full compiler for transforming regex patterns to DFA binary format.
# Includes lexer, parser, NFA/DFA construction, and serialization.
iree_runtime_cc_library(
    name = "compile",
    srcs = ["compile.c"],
    hdrs = ["compile.h"],
    deps = [
        ":exec",
        ":internal_dfa",
        ":internal_nfa",
        ":internal_parser",
        "//runtime/src/iree/base",
        "//runtime/src/iree/base/internal:arena",
    ],
)

iree_runtime_cc_test(
    name = "compile_test",
    srcs = ["compile_test.cc"],
    deps = [
        ":compile",
        ":exec",
        ":internal_parser",
        "//runtime/src/iree/base/internal:arena",
        "//runtime/src/iree/testing:gtest",
        "//runtime/src/iree/testing:gtest_main",
    ],
)

cc_binary_benchmark(
    name = "compile_benchmark",
    srcs = ["compile_benchmark.cc"],
    deps = [
        ":compile",
        "//runtime/src/iree/base",
        "//runtime/src/iree/testing:benchmark_main",
        "@com_google_benchmark//:benchmark",
    ],
)

#===------------------------------------------------------------------------===#
# End-to-End Regex Tests
#===------------------------------------------------------------------------===#

# Combined compile + execute tests for verifying regex matching behavior.
# For compiler-only tests, see compile_test.
# For executor-only tests with hand-built DFAs, see exec_test.
iree_runtime_cc_test(
    name = "regex_test",
    srcs = ["regex_test.cc"],
    deps = [
        ":compile",
        ":exec",
        "//runtime/src/iree/testing:gtest",
        "//runtime/src/iree/testing:gtest_main",
    ],
)
