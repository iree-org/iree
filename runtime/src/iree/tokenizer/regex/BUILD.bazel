iree_runtime_cc_library(
    name = "internal_parser",
    srcs = ["internal/parser.c"],
    hdrs = ["internal/parser.h"],
    visibility = ["//visibility:private"],
    deps = [
        ":exec",
        ":internal_ast",
        ":internal_lexer",
        "//runtime/src/iree/base",
        "//runtime/src/iree/base/internal:arena",
    ],
)

iree_runtime_cc_library(
    name = "internal_nfa",
