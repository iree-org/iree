package(default_visibility = ["//visibility:public"])

cc_library(
    name = "dear_imgui",
    hdrs = [
        "imgui.h",
        "imstb_textedit.h",
        "imstb_truetype.h",
        "imstb_rectpack.h",
    ],
    include_prefix = "third_party/dear_imgui",
    deps = [":dear_imgui_srcs"],
)

# Split into two rules so that include_prefix can be used.
cc_library(
    name = "dear_imgui_srcs",
    srcs = [
        "imgui.cpp",
        "imgui_demo.cpp",
        "imgui_draw.cpp",
        "imgui_widgets.cpp",
    ],
    hdrs = [
        "imconfig.h",
        "imgui.h",
        "imgui_internal.h",
        "imstb_textedit.h",
        "imstb_truetype.h",
        "imstb_rectpack.h",
    ],
)

cc_library(
    name = "imgui_sdl_vulkan",
    hdrs = [
        "examples/imgui_impl_vulkan.h",
        "examples/imgui_impl_sdl.h",
    ],
    deps = [":imgui_sdl_vulkan_srcs"],
    include_prefix = "third_party/dear_imgui",
)

# Split into two rules so that include_prefix can be used.
cc_library(
    name = "imgui_sdl_vulkan_srcs",
    srcs = [
        "examples/imgui_impl_vulkan.cpp",
        "examples/imgui_impl_sdl.cpp",
    ],
    hdrs = [
        "examples/imgui_impl_vulkan.h",
        "examples/imgui_impl_sdl.h",
    ],
    deps = [
        ":dear_imgui_srcs",
        "@iree_vulkan_headers//:vulkan_headers",
        "@vulkan_sdk//:sdk",
        "@sdl2//:SDL2",
    ],
)

cc_binary(
    name = "example_sdl_vulkan",
    srcs = [
        "examples/example_sdl_vulkan/main.cpp",
    ],
    deps = [
        ":dear_imgui_srcs",
        ":imgui_sdl_vulkan_srcs",
    ],
    includes = ["examples/"],
)
