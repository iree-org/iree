# Integration-like end-to-end tests that span multiple pipeline stages.
# Unlike Transforms/test/ which tests individual passes in isolation,
# these tests validate full pipeline behavior (partitioning, scheduling,
# allocation, timepoint optimization) using --iree-stream-transformation-pipeline.

load("//build_tools/bazel:enforce_glob.bzl", "enforce_glob")
load("//build_tools/bazel:iree_lit_test.bzl", "iree_lit_test_suite")

package(
    features = ["layering_check"],
    licenses = ["notice"],  # Apache 2.0
)

iree_lit_test_suite(
    name = "lit",
    srcs = enforce_glob(
        # keep sorted
        [
            "async_copies.mlir",
            "async_parameters.mlir",
        ],
        include = ["*.mlir"],
    ),
    cfg = "//compiler:lit.cfg.py",
    tools = [
        "//tools:iree-opt",
        "@llvm-project//llvm:FileCheck",
    ],
)
