iree_gentbl_cc_library(
    name = "IREEVectorExtOpsGen",
    tbl_outs = [
        (
            ["--gen-op-decls"],
            "VectorExtOps.h.inc",
        ),
        (
            ["--gen-op-defs"],
            "VectorExtOps.cpp.inc",
        ),
    ],
    tblgen = "@llvm-project//mlir:mlir-tblgen",
    td_file = "VectorExtOps.td",
    deps = [
        ":td_files",
