iree_tablegen_doc(
    name = "IREEVectorExtDialectDocGen",
    tbl_outs = [
        (
            [
                "--gen-dialect-doc",
                "--dialect=iree_vector_ext",
            ],
            "IREEVectorExtDialect.md",
        ),
    ],
    tblgen = "@llvm-project//mlir:mlir-tblgen",
    td_file = "VectorExtOps.td",
    deps = [":td_files"],
