load("//build_tools/bazel:enforce_glob.bzl", "enforce_glob")
load("//build_tools/bazel:iree_lit_test.bzl", "iree_lit_test_suite")

package(
    features = ["layering_check"],
    licenses = ["notice"],  # Apache 2.0
)

gpu_archs = [
    "gfx942","gfx950"
]

ukernel_pdl_patterns_files = [
    "apply_builtin_ukernel_pdl_patterns_%s.mlir" % gpu_arch
    for gpu_arch in gpu_archs
] + [
    "apply_builtin_ukernel_pdl_patterns_driver_%s.mlir" % gpu_arch
    for gpu_arch in gpu_archs
] + ["apply_builtin_pdl_patterns.mlir"]

iree_lit_test_suite(
    name = "lit",
    srcs = ukernel_pdl_patterns_files,
    cfg = "//compiler:lit.cfg.py",
    tools = [
        "//tools:iree-opt",
        "@llvm-project//llvm:FileCheck",
    ],
)
